{
  "name": "second-brain-orchestrator",
  "version": "0.1.0",
  "description": "Vikunja webhook enrichment service for Second Brain",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "cross-env TZ=UTC vitest run",
    "test:watch": "cross-env TZ=UTC vitest",
    "test:coverage": "cross-env TZ=UTC vitest run --coverage"
  },
  "dependencies": {
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "pino": "^9.3.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "cross-env": "^7.0.3",
    "pino-pretty": "^11.2.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20"
  }
}
